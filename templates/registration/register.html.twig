{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="w-full h-3 border flex flex-col py-2 px-3 bg-grey-lighter flex flex-row justify-between items-center">
    <h1 class="h3 mb-3 font-weight-normal">Register</h1>

<div class="w-full max-w-xs">
    {{ form_start(registrationForm, {attr:{
            "class": 
            "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
        }}) }}
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
        {{ form_row(registrationForm.username, {attr:{
            "class": 
            "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        }}) }}
      </label>
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password',
            attr:{
            "class": 
            "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
            } 
        }) }}
      </label>
      <p class="text-red-500 text-xs italic">Please choose a password.</p>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="info">
        {{ form_row(registrationForm.info, {attr:{
            "class": 
            "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        }}) }}
      </label>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="imgage">
        {{ form_row(registrationForm.image, {attr:{
            "class": 
            "shadow appearance-none border border-red-500 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
        }}) }}
      </label>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="username">
        {{ form_row(registrationForm.agreeTerms) }}
      </label>
    </div>
    <div class="flex items-center justify-between">
      <button  type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" style="background-color: blue;" type="button">
        Sign In
      </button>     
    </div>
      {{ form_end(registrationForm) }}

  
</div>
</div>
{% endblock %}
